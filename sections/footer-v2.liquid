      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "t:sections.global.settings.logo_width_desktop.label",
      "default": 150
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "t:sections.global.settings.logo_width_mobile.label",
      "default": 150
    },
    {
      "type": "header",
      "content": "t:sections.footer.headers.contacts.content"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter",
      "label": "X URL"
    },
    {
      "type": "url",
      "id": "tiktok",
      "label": "Tiktok URL"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "pinterest",
      "label": "Pinteresr URL"
    },
    {
    "type": "text",
    "id": "copyright-text",
    "label": "Copyright Text"
  }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "t:sections.footer.blocks.menu.name",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:sections.footer.blocks.menu.settings.menu.label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.footer.blocks.menu.settings.heading.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.footer.blocks.menu.settings.link.label"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "t:sections.footer.blocks.newsletter.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.global.settings.heading.label",
