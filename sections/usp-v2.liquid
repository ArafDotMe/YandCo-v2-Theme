                                    />
                                </svg>
                              {% endif %}
                            </span>
                    </div>
                    <div class="feature-item-content">
                        <h5 class="feature-item-title">
                            {{ block.settings.title }}
                        </h5>
                        <p>
                            {{ block.settings.desc }}
                        </p>
                    </div>
                </div>
                <!-- Feature Item End -->
            </div>
          {% endfor %}                                      
        </div>
    </div>
</div>
<!-- Features End -->


{% schema %}
  {
    "name": "USP v2",
    "settings": [],
    "max_blocks": 4,
    "blocks": [
    {
      "type": "select",
      "name": "USP",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "icon1",
              "label": "Icon 1"
