                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    />
                                </svg>
                              {% elsif block.settings.icon == 'icon4' %}
                                <svg
                                    viewBox="0 0 30 30"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg"
                                >
