<style>
/*----------------------------------------*/
/*  16. About Content CSS
/*----------------------------------------*/
.about-section {
    padding: 50px 0;
}
.about-section hr {
    border-top: 0.5px solid #e6e6e6;
    border-bottom: 0;
    margin: 60px 0;
}

.about-content--title {
    font-size: 50px;
    font-weight: 400;
    line-height: 1.2;
    margin: 0;
    color: #333;
}
@media only screen and (min-width: 1024px) and (max-width: 1199px) {
    .about-content--title {
        font-size: 44px;
    }
}
@media only screen and (max-width: 767px) {
    .about-content--title {
        font-size: 44px;
    }
}
@media only screen and (max-width: 767px) {
    .about-content--title {
        font-size: 36px;
    }
}
.about-content--title p {
  margin: 0;
}
  
.about-content--description p {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    margin-top: 20px;
    color: #666;
    text-align: justify;
}
.about-content--description img {
    border-radius: 20px;
    margin-top: 20px;
}

.about-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    flex-wrap: wrap;
    gap: 100px;
}
@media only screen and (max-width: 1023px) {
    .about-row {
        grid-template-columns: repeat(1, 1fr);
        gap: 0;
    }
}

.about-mission-vision {
    margin-top: 50px;
}
.about-mission-vision--title {
    font-size: 40px;
    font-weight: 400;
    line-height: 1.2;
    margin: 0;
    color: #333;
}

@media only screen and (max-width: 1023px) {
    .about-mission-vision--title {
        font-size: 36px;
    }
}
.about-mission-vision--description {
    margin-top: 20px;
}
.about-mission-vision--description p {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    color: #666;
    text-align: justify;
}
.about-mission-vision--description p + p {
    margin-top: 20px;
}

.about-vales--title {
    font-size: 40px;
    font-weight: 500;
    line-height: 1.2;
    margin: 0;
    color: #333;
}
@media only screen and (max-width: 1023px) {
    .about-vales--title {
        font-size: 36px;
    }
}

.about-vales-row {
    display: flex;
    flex-wrap: wrap;
    margin-left: -15px;
    margin-right: -15px;
}

.about-vale-item {
    width: 33.33%;
    padding: 0 15px;
}
@media only screen and (max-width: 1023px) {
    .about-vale-item {
        width: 50%;
    }
}
@media only screen and (max-width: 767px) {
    .about-vale-item {
        width: 100%;
    }
}

.about-item-card {
    padding: 70px 50px;
    background-color: #f7f8fa;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    margin-top: 30px;
}
@media only screen and (min-width: 1024px) and (max-width: 1199px), only screen and (max-width: 1023px) {
    .about-item-card {
        padding: 40px 30px;
    }
}
.about-item-card--icon {
    display: flex;
    margin-bottom: 30px;
}
.about-item-card--title {
    margin: 0;
    font-size: 30px;
    font-weight: 400;
    line-height: 1.3;
    color: #333;
}
.about-item-card p {
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
    min-height: 128px;
    height: 100%;
    margin-top: 15px;
    color: #666;
    text-align: justify;
}

.about-newsletter {
    background-color: #f7f8fa;
    padding: 70px;
    text-align: center;
    border-radius: 20px;
    margin-top: 100px;
}
@media only screen and (max-width: 767px) {
    .about-newsletter {
        padding: 40px;
    }
}
@media only screen and (max-width: 450px) {
    .about-newsletter {
        padding: 30px;
    }
}
.about-newsletter p {
    max-width: 885px;
    width: 100%;
    margin: 20px auto 0;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    color: #666;
}
.about-newsletter--title {
    font-size: 45px;
    font-weight: 400;
    line-height: 1.2;
    margin: 0;
    color: #333;
}
@media only screen and (min-width: 1024px) and (max-width: 1199px) {
    .about-newsletter--title {
        font-size: 44px;
    }
}
@media only screen and (max-width: 767px) {
    .about-newsletter--title {
        font-size: 44px;
    }
}
@media only screen and (max-width: 767px) {
    .about-newsletter--title {
        font-size: 36px;
    }
}
@media only screen and (max-width: 450px) {
    .about-newsletter--title {
        font-size: 30px;
    }
}
.about-newsletter--form {
    max-width: 462px;
    width: 100%;
    position: relative;
    margin: 40px auto 0;
}
.about-newsletter--form  .newsletter-banner__inner .newsletter_input {
    width: 100%;
}
.about-newsletter--form input {
    padding: 18px 70px 18px 40px !important;
    height: auto !important;
    border: 1px solid rgba(0, 0, 0, 0.2) !important;
    background-color: transparent !important;
    box-shadow: none !important;
}
@media only screen and (max-width: 450px) {
    .about-newsletter--form input {
        padding: 15px 50px 15px 20px;
    }
}

.about-newsletter--form .newsletter_btn {
    position: absolute;
    top: 19px;
    right: 10px;
    margin-top: 0;
}
.about-newsletter--form .newsletter_btn button {
    font-size: 18px;
    color: rgba(0, 0, 0, 0.7);
    padding: 0;
    line-height: 0;
    background: none;
    border: 0;
    width: 50px;
    height: auto;
    min-width: auto;
    transition: all 0.3s linear !important;
}
.about-newsletter--form .newsletter_btn button:hover {
    color: #8F8B54;
}
.about-newsletter--form .newsletter_btn button svg {
    width: 1em;
    height: 1em;
    fill: currentColor;
}
</style>

<!-- About Section Start -->
<div class="about-section">
    <div class="container">
        <!-- About Content Start -->
        <div class="about-content">
            <h2 class="about-content--title">{{ section.settings.page_title }}</h2>
            <div class="about-content--description">
                {{ section.settings.description_1 }}
                {% comment %}
                  <img src="{{ section.settings.featured_image | image_url }}" alt="About" width="" height="" />
                {% endcomment %}
                {{ section.settings.description_2 }}
            </div>
        </div>
        <!-- About Content End -->

        <!-- About Row Start -->
        <div class="about-row">
            <!-- About mission and vision Start -->
            <div class="about-mission-vision">
                <h3 class="about-mission-vision--title">{{- 'about_us.our_mission' | t -}}</h3>
                <div class="about-mission-vision--description">
                    {{ section.settings.mission }}
                </div>
            </div>
            <!-- About mission and vision End -->

            <!-- About mission and vision Start -->
            <div class="about-mission-vision">
                <h3 class="about-mission-vision--title">{{- 'about_us.our_vision' | t -}}</h3>
                <div class="about-mission-vision--description">
                    {{ section.settings.vision }}
                </div>
            </div>
            <!-- About mission and vision End -->
        </div>
        <!-- About Row End -->

        <hr />

        <!-- About Values Start -->
        {% if section.blocks.size > 0 %}
          <div class="about-vales">
              <h3 class="about-vales--title">Our Values</h3>
              <div class="about-vales-row">
              {% for block in section.blocks %}
                  <div class="about-vale-item">
                      <!-- About Item Card Start -->
                      <div class="about-item-card">
                          <div class="about-item-card--icon">
                              <img src="{{ block.settings.value_icon | img_url: 'original' }}" alt="{{ block.settings.value_title }}" width="" height="64px">
                          </div>
                          <h4 class="about-item-card--title">
                              {{ block.settings.value_title }}
                          </h4>
                          {{ block.settings.value_des }}
                      </div>
                      <!-- About Item Card End -->
                  </div>
                {% endfor %}
              </div>
          </div>
        {% endif %}
        <!-- About Values End -->

        <!-- About Newsletter Start -->
        <div class="about-newsletter">
            <h3 class="about-newsletter--title">
                {{- 'about_us.mailing_list_title' | t -}}
            </h3>
            <p>
              {{- 'about_us.mailing_list_content' | t -}}
            </p>
            
            <div class="about-newsletter--form">
              {% render 'newsletter-form-v2', namespace: section.id, button_style: section.settings.button_style %}
