<link rel="stylesheet" href="{{ 'accordion-item-v2.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{- 'photoswipe.css' | asset_url -}}" media="print" onload="this.media='all'">

<noscript>
  {{- 'accordion-item.css' | asset_url | stylesheet_tag -}}
  {{- 'photoswipe.css' | asset_url | stylesheet_tag -}}
</noscript>

<script src="{{- 'photoswipe-lightbox.umd.min.js' | asset_url -}}" defer="defer"></script>
<script src="{{- 'photoswipe.umd.min.js' | asset_url -}}" defer="defer"></script>
<script src="{{- 'product-media.js' | asset_url -}}" defer="defer"></script>
<script src="{{- 'product-selector.js' | asset_url -}}" defer="defer"></script>
<script src="{{ 'accordion-item.js' | asset_url }}" defer="defer"></script>

{%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
{%- if first_3d_model -%}
  <link id="ModelViewerStyle" rel="stylesheet" href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css" media="print" onload="this.media='all'">

  <script type="application/json" id="ProductJSON-{{ product.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
  <script src="{{ 'product-model.js' | asset_url }}" defer></script>
{%- endif -%}

{% render 'product', is_product_template: true %}

{% schema %}
{
  "name": "t:sections.main-product.name",
  "settings": [
    {
      "type": "select",
      "id": "aspect_ratio_desktop",
      "label": "t:sections.global.settings.aspect_ratio_desktop.label",
      "options": [
        {
          "value": "media--original",
          "label": "t:sections.global.settings.aspect_ratio_desktop.options.original.label"
        },
        {
          "value": "media--2-3",
          "label": "t:sections.global.settings.aspect_ratio_desktop.options.2_3.label"
        },
        {
          "value": "media--1-2",
          "label": "t:sections.global.settings.aspect_ratio_desktop.options.1_2.label"
        },
        {
          "value": "media--1-1",
          "label": "t:sections.global.settings.aspect_ratio_desktop.options.1_1.label"
        }
      ],
      "default": "media--2-3"
    },
    {
      "type": "select",
      "id": "aspect_ratio_mobile",
      "label": "t:sections.global.settings.aspect_ratio_mobile.label",
      "options": [
        {
          "value": "media--mobile-original",
          "label": "t:sections.global.settings.aspect_ratio_desktop.options.original.label"
        },
        {
          "value": "media--mobile-2-3",
          "label": "t:sections.global.settings.aspect_ratio_mobile.options.2_3.label"
        },
        {
          "value": "media--mobile-1-2",
          "label": "t:sections.global.settings.aspect_ratio_mobile.options.1_2.label"
        },
        {
          "value": "media--mobile-1-1",
          "label": "t:sections.global.settings.aspect_ratio_mobile.options.1_1.label"
        }
      ],
      "default": "media--mobile-2-3"
    },
    {
      "type": "header",
      "content": "t:sections.main-product.headers.media.content"
    },
    {
      "type": "checkbox",
      "id": "autoplay_first_video",
      "label": "t:sections.main-product.settings.autoplay_first_video.label"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:sections.main-product.settings.layout.label",
      "options": [
        {
          "value": "grid",
          "label": "t:sections.main-product.settings.layout.options.grid"
        },
        {
          "value": "thumbs",
          "label": "t:sections.main-product.settings.layout.options.thumbs"
        }
      ],
      "default": "thumbs"
    },
    {
      "type": "select",
      "id": "thumbs_position",
      "label": "t:sections.main-product.settings.thumbs_position.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.main-product.settings.thumbs_position.options.left"
        },
        {
          "value": "right",
          "label": "t:sections.main-product.settings.thumbs_position.options.right"
        },
        {
          "value": "bottom",
          "label": "t:sections.main-product.settings.thumbs_position.options.bottom"
        }
      ],
      "default": "bottom"
    },
    {
      "type": "header",
      "content": "t:sections.main-product.headers.pagination.content"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "t:sections.global.settings.autoplay.label",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_interval",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "t:sections.global.settings.autoplay_interval.unit",
      "label": "t:sections.global.settings.autoplay_interval.label",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "t:sections.main-product.blocks.badge.name",
      "limit": 1
    },
    {
      "type": "title",
      "name": "t:sections.main-product.blocks.heading.name",
      "limit": 1
    },
    {
      "type": "vendor",
      "name": "t:sections.main-product.blocks.vendor.name",
      "limit": 1
    },
    {
      "type": "price",
      "name": "t:sections.main-product.blocks.price.name",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "t:sections.main-product.blocks.variant_picker.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.variant_picker.title.label",
          "info": "t:sections.main-product.blocks.variant_picker.title.info"
        },
        {
          "type": "checkbox",
          "id": "size_guide",
          "label": "t:sections.main-product.blocks.variant_picker.size_guide.label"
        },
        {
          "type": "page",
          "id": "page",
          "label": "t:sections.size-guide.settings.page.label",
          "info": "t:sections.size-guide.settings.page.info"
        },
        {
          "type": "checkbox",
          "id": "enable_size_guide_calculator",
          "label": "t:sections.size-guide.settings.enable_size_guide_calculator.label",
          "info": "t:sections.size-guide.settings.enable_size_guide_calculator.info"
        }
      ]
    },
    {
      "type": "quantity",
      "name": "t:sections.main-product.blocks.quantity.name",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "t:sections.main-product.blocks.buy_buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "button_style",
          "label": "t:sections.global.settings.button_style.label",
          "options": [
            {
              "value": "button--style-1",
              "label": "t:sections.global.settings.button_style.options.style_one"
            },
            {
              "value": "button--style-2",
              "label": "t:sections.global.settings.button_style.options.style_two"
            },
            {
              "value": "button--style-3",
              "label": "t:sections.global.settings.button_style.options.style_three"
            },
            {
              "value": "button--style-4",
              "label": "t:sections.global.settings.button_style.options.style_four"
            }
          ],
          "default": "button--style-2"
        },
        {
          "type": "checkbox",
          "id": "checkout_buttons",
          "label": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.label",
          "default": false,
          "info": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.info"
        },
        {
          "type": "checkbox",
          "id": "show_gift_card_recipient",
          "default": true,
          "label": "t:sections.main-product.blocks.buy_buttons.settings.show_gift_card_recipient.label",
          "info": "t:sections.main-product.blocks.buy_buttons.settings.show_gift_card_recipient.info"
        }
      ]
    },
    {
      "type": "description",
      "name": "t:sections.main-product.blocks.description.name",
      "limit": 1
    },
    {
      "type": "collapsible_description",
      "name": "t:sections.main-product.blocks.collapsible_description.name",
      "settings": [
        {
          "type": "checkbox",
          "id": "open",
          "label": "t:sections.main-product.blocks.collapsible_description.settings.open.label",
          "info": "t:sections.main-product.blocks.collapsible_description.settings.open.info"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.collapsible_description.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "t:sections.main-product.blocks.collapsible_description.settings.description.label"
        }
      ]
    },
    {
      "type": "purchase_options",
      "name": "t:sections.main-product.blocks.purchase-options.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.main-product.blocks.purchase-options.settings.paragraph_info.content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.purchase-options.settings.title.label",
          "default": "Purchase Options"
        }
      ]
    },
    {
      "type": "pickup_availability",
      "name": "t:sections.main-product.blocks.pickup_availability.name",
      "limit": 1
    },
    {
      "type": "stock_notification",
      "name": "t:sections.main-product.blocks.stock-notification.name",
      "limit": 1,
      "settings": [
        {
          "type": "range",
          "id": "threshold",
          "min": 1,
          "max": 50,
          "step": 1,
          "label": "t:sections.main-product.blocks.stock-notification.settings.threshold.label",
          "info": "t:sections.main-product.blocks.stock-notification.settings.threshold.info",
          "default": 15
        }
      ]
    },
    {
      "type": "shop_pay_installments",
      "name": "t:sections.main-product.blocks.shop_pay_installments.name",
      "limit": 1
    },
    {
      "type": "custom_liquid",
      "name": "t:sections.custom-liquid.name",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "t:sections.custom-liquid.settings.custom_liquid.label",
          "info": "t:sections.custom-liquid.settings.custom_liquid.info"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "title"
      },
      {
        "type": "vendor"
      },
      {
        "type": "price"
      }
    ]
  }
}
{% endschema %}
