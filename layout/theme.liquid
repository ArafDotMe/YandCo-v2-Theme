  <body class="template{% if template.suffix %} template--{{- template.suffix -}}{% endif %}">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{- 'accessibility.skip_to_text' | t -}}
    </a>

    {%-
      liquid
      unless template == 'cart'
      if settings.cart_type == 'drawer'
        render 'cart-drawer'
      endif
      endunless
    -%}

    {% sections 'header-group' %}

    {% sections 'popups-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% render 'spinner' %}

    {% sections 'footer-group-v2' %}

    {% render 'modal-localization' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{- 'accessibility.refresh_page' | t -}}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}'
      };

      window.cartStrings = {
        error: `{{ 'cart.cart_error' | t }}`,
        quantityError: `{{ 'cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`
      }
      window.variantStrings = {
        unavailable: '{{ 'products.product.unavailable' | t }}',
        addToCart: '{{ 'products.product.add_to_cart' | t }}',
        soldOut: '{{ 'products.product.sold_out' | t }}',
      }

      

      // Track Order
      const trackingTitle = document.querySelector('.pp_tracking_title');
      if (trackingTitle) {
        trackingTitle.textContent = ''; 
        trackingTitle.textContent = 'Track Order';
      }

      // Filter Color
      const filterTitles = document.querySelectorAll('[dir="rtl"] .color-title');
      
      filterTitles.forEach(title => {
        title.textContent = 'لون';
      });
      
    </script>
